{
    "manifest_version": 3,
    "name": "Website Reminder",
    "version": "1.0",
    "description": "Set reminders for specific websites.",
    "permissions": ["activeTab", "storage", "tabs"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon128.png"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    }

}
